{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ESNext",
    "module": "NodeNext", // Use ES modules
    "moduleResolution": "NodeNext", // Use Node.js module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/app.d.ts", "./node_modules/@types"]
  },
  "include": [
    "./*.js",
    "src/**/*.ts" 
  ]
}